{
    "liveSassCompile.settings.formats": [
    
        // ============================== dotnet version ==============================
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/dotnet-version/overDeRhein/wwwroot"
        },
        
        // ============================== node.js version ==============================
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/over-de-rhein.main.app/app/src/wwwroot"
        },

        // ============================== exam version ==============================
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/exam-version/www-old/public"
        },

        // ============================== expanded css files ==============================
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/sass/css"
        }
    ],

    "liveSassCompile.settings.generateMap": false,

    "liveSassCompile.settings.excludeList": [
        "database.sql/**",
        "dotnet-version/mssql-database/**",
        "**/node_modules/**"
    ]
}